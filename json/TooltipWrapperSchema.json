        "offset": true,
        "showArrow": true,
        "trigger": true,
        "mouseEnterDelay": true,
        "mouseLeaveDelay": true,
        "rootClose": true,
        "body": true,
        "wrapperComponent": true,
        "inline": true,
        "tooltipTheme": true,
        "enterable": true,
        "tooltipStyle": true,
        "tooltipArrowClassName": true,
        "tooltipClassName": true
    },
    "required": [
        "type",
        "wrapperComponent"
    ]
